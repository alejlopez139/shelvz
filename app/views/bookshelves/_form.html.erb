  </div>

  <div>
    <%= form.label :owner_id, style: "display: block" %>
    <%= form.text_field :owner_id %>
  </div>

  <div>
    <%= form.label :book_count, style: "display: block" %>
    <%= form.number_field :book_count %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, style: "margin-bottom: 10px" %>
  </div>

  <div>
    <%= form.submit style: "margin-bottom: 20px"%>
  </div>

  <div>
  <%= button_to "Destroy this bookshelf", @bookshelf, method: :delete, style: "background-color:red"%>
